card-color = #f4f7b0

  html {
    font-family: helvetica;
    font-weight: 900;
  }

  body {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
  }

  main {
    flex: 1 0 auto;
  }

  cardShadow = 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);


// Global styles
.luCard
  box-shadow: cardShadow
  display block
  margin 10px//0 10px 10px 10px 10px
  background-color: card-color
  //padding 10px
  &-content
    width 100%

// styling for the dash boxes
.dash-frame
  overflow: hidden;
  width: 280px
  max-height: 300px
  .scroll-container
    overflow: auto;
    height 300px
    margin: 15px -300px 15px 15px
    padding-right: 300px

// RSS Card styles -- should be easily adapted to other stuff

  // variables
  rssIconHeight = 150px
  rssIconWidth = 150px

.rss-card
  &-image-container
    height auto
    // display inline-block
    // position absolute
    // width 50
  &-image
    // display: inline-block;
    // position absolute
    margin 0 10px 10px 10px 10px
    width 100%
    max-height: rssIconHeight
    max-width: rssIconWidth
  &-text
    margin-left 115px
    display inline-block
    width: 60%
    height auto

  // Schedule styles
schedIconHeight = 50px
schedIconWidth = 50px
.schedule-card
  .logo
    max-height schedIconHeight
    max-width schedIconWidth
  .score
    font-size: larger

.league-table
  position relative
  thead
    display block
    // position: fixed;
  .crest
    width 20px
    height 20px
  .active
    background-color: red
