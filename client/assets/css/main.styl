card-color = #FDFDFD

  html {
    font-family: helvetica;
    font-weight: 900;
  }

  body {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
  }

  main {
    flex: 1 0 auto;
  }

  cardShadow = 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);


// Global styles
.luCard
  box-shadow: cardShadow
  display block
  margin 10px//0 10px 10px 10px 10px
  background-color: card-color
  padding 10px

// RSS Card styles -- should be easily adapted to other stuff

  // variables
  rssIconHeight = 150px
  rssIconWidth = 150px

.rss-card
  &-image-container
    height auto
    display inline-block
    position absolute
    // width 50
  &-image
    display: inline-block;
    // position absolute
    margin 0 10px 10px 10px 10px
    max-height: rssIconHeight
    max-width: rssIconWidth
  &-text
    margin-left 115px
    display inline-block
    width: 60%
    height auto

  // Schedule styles

.schedule-card-content
  display flex
  justify-content: space-around;
.schedule-half
  display inline-block
  position relative
  background-color: peachpuff
.schedule-divider
  display inline-block
  background-color burlywood
.schedule-team, .schedule-game
  display: inline-block;
.schedule-time
  display flex;
  justify-content: center;
.schedule-game
  .score
    font-size: x-large
.schedule-team
  display flex
  width 160px
  position: absoltue

