card-color = #FDFDFD

  html {
    font-family: helvetica;
    font-weight: 900;
  }

  body {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
  }

  main {
    flex: 1 0 auto;
  }


// RSS Card styles -- should be easily adapted to other stuff

  // variables
  rssIconHeight = 150px
  rssIconWidth = 150px
  cardShadow = 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12);

.rss-card
  display block
  margin 10px//0 10px 10px 10px 10px
  background-color: card-color
  box-shadow: cardShadow
  padding 10px
  &-image-container
    height auto
    display inline-block
    position absolute
    // width 50
  &-image
    display: inline-block;
    // position absolute
    margin 0 10px 10px 10px 10px
    max-height: rssIconHeight
    max-width: rssIconWidth
  &-text
    margin-left 115px
    display inline-block
    width: 60%
    height auto
